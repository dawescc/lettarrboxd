# ==========================================
# Lettarrboxd Configuration
# ==========================================

# ------------------------------
# Letterboxd Configuration
# ------------------------------
# Your Letterboxd list URL. Can be a watchlist, regular list, filmography, etc.
# Examples:
# - https://letterboxd.com/user/watchlist/
# - https://letterboxd.com/user/list/horror-gems/
# - https://letterboxd.com/actor/tom-hanks/
LETTERBOXD_URL=https://letterboxd.com/yourusernamehere/watchlist/

# Movie Limiting (optional - both must be specified together)
# Number of movies to sync from watchlist
# LETTERBOXD_TAKE_AMOUNT=10
# Strategy for selecting movies (newest or oldest)
# LETTERBOXD_TAKE_STRATEGY=newest


# ------------------------------
# Serializd Configuration (TV Shows)
# ------------------------------
# Your Serializd watchlist URL.
# Example: https://www.serializd.com/user/username/watchlist
SERIALIZD_URL=https://www.serializd.com/user/yourusernamehere/watchlist


# ------------------------------
# Radarr Configuration (Movies)
# ------------------------------
# Base URL of your Radarr instance (include http/https and port)
RADARR_API_URL=http://localhost:7878
# API key from Radarr Settings > General > Security > API Key
RADARR_API_KEY=your_radarr_api_key_here
# Quality profile name (must match exactly - case sensitive, e.g. "HD-1080p", "Ultra HD")
RADARR_QUALITY_PROFILE=HD-1080p
# When movies become available for download (announced, inCinemas, released)
RADARR_MINIMUM_AVAILABILITY=released
# Optional: Specific Root Folder ID (if not specified, uses first available)
# RADARR_ROOT_FOLDER_ID=1
# Add movies in unmonitored state (true = unmonitored / false = monitored)
# RADARR_ADD_UNMONITORED=false
# Additional tags to apply to all movies synced from this instance (comma-separated)
# RADARR_TAGS=lettarrboxd,watchlist


# ------------------------------
# Sonarr Configuration (TV Shows)
# ------------------------------
# Base URL of your Sonarr instance
SONARR_API_URL=http://localhost:8989
# API key from Sonarr
SONARR_API_KEY=your_sonarr_api_key_here
# Quality profile name
SONARR_QUALITY_PROFILE=HD-1080p
# Root folder path for series (e.g. /tv or /data/media/tv)
SONARR_ROOT_FOLDER_PATH=/tv
# Season monitoring strategy: all, first, latest, future, none
SONARR_SEASON_MONITORING=all
# Add series in unmonitored state
# SONARR_ADD_UNMONITORED=false
# Additional tags to apply to all series synced from this instance
# SONARR_TAGS=serializd,watchlist


# ------------------------------
# Plex Integration (Optional)
# ------------------------------
# Sync Letterboxd/Serializd tags to your Plex library labels
# PLEX_URL=http://192.168.1.100:32400
# PLEX_TOKEN=your-plex-token
# Comma-separated list of labels to apply to synced content
# PLEX_TAGS=lettarrboxd


# ------------------------------
# Application Configuration
# ------------------------------
# How often to check for new items in minutes (minimum 10)
CHECK_INTERVAL_MINUTES=60

# Remove items from Radarr/Sonarr if they are removed from the source list
# WARNING: This will unmonitor/delete movies that are no longer in your list.
# Requires the item to have the specific tag managed by this instance.
REMOVE_MISSING_ITEMS=false

# Directory for storing application data (persistent storage)
DATA_DIR=./data

# Dry run mode (true to simulate actions without making changes)
DRY_RUN=false

# Environment mode (development, production)
NODE_ENV=production
# Logging level (error, warn, info, debug)
LOG_LEVEL=info
